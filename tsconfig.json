{
    "compilerOptions": {
       "lib": [
          "es6"
       ],
       "target": "es6",
       "module": "ES2020",
       "moduleResolution": "Node",
       "outDir": "dist",
       "resolveJsonModule": true,
       "emitDecoratorMetadata": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "ts-node": {
        "esm": true
    }
 }